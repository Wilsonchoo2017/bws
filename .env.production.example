# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Application
PORT=8000
NODE_ENV=production
DENO_ENV=production

# Timezone
TZ=Asia/Kuala_Lumpur

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/bws

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# External APIs
REBRICKABLE_API_KEY=your_rebrickable_api_key_here

# Bricklink API Configuration
BRICKLINK_CONSUMER_KEY=your_bricklink_consumer_key_here
BRICKLINK_CONSUMER_SECRET=your_bricklink_consumer_secret_here
BRICKLINK_TOKEN_VALUE=your_bricklink_token_value_here
BRICKLINK_TOKEN_SECRET=your_bricklink_token_secret_here

# Image Storage Configuration
# Path where product images are stored (inside container)
IMAGE_STORAGE_PATH=/app/static/images/products

# Optional: Additional Security
# Add any other production environment variables here
